---
import Layout from '@layouts/Layout.astro';
import { data } from "../data/data";

const info = {
  title: 'RAMEN2023',
  description: '2023年に食べたラーメンの記録'
}
---
<Layout title={info.title} description={info.description}>
  <div class="globalContainer">
    <header>
      <h1>{info.title}</h1>
      <div class="description">{info.description}</div>
    </header>
    <main>
      <ul>
        {data.map((d)=> {
          return (
            <li>
              <a href={`${d.url}`} target="_blank">
              <img src={`/assets/img/${d.image}`} alt="aa" data-webgl data-tex={`/assets/img/${d.image}`}>
              <div class="meta">
                <div class="date">{d.date}</div>
                <h2 class="name">{d.name}</h2>
              </div>
            </a>
            </li>
          )
        })}
      </ul>
    </main>
    <footer>
      <div>Development by M.Nishina</div>
      <small>c M.Nishina</small>
    </footer>
  </div>
  <div class="load"><span>0</span>%</div>
</Layout>
